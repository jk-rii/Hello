<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEF3DB"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#80376346"
            app:srcCompat="@drawable/main_title" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center"
            android:layout_margin="20dp"
            android:elevation="5dp"
            android:background="@drawable/menu"
            />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#9C9C9C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="#CCFFFFFF"
        android:elevation="15dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Tips!"
            android:textColor="#DFC153"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/randomTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="랜덤 출력"
            android:textColor="#000000" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/profile_Linear"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/round_profile"
        android:elevation="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/profile_Image"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/select_profile" />

        <TextView
            android:id="@+id/dog_Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />


        <!--정보 프로필-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dog_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="이름"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/Btn_Edit"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/edit" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dog_Age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#80FEECDB"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="나이"
                    android:textColor="#000000" />


                <TextView
                    android:id="@+id/dog_Species"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#80FEECDB"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="견종"
                    android:textColor="#000000" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dog_Gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#80FEECDB"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="성별"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/dog_Weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#80FEECDB"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="무게"
                    android:textColor="#000000" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dog_Character"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#80FEECDB"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="특징"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/user_id"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="user"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout> <!--프로필 끝 /////////////-->


    <!--날짜 계산-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/round_popup"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/dday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="데려온날"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="RESULT"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="같이 사는 중"
            android:textSize="15dp" />

        <Button
            android:id="@+id/dateButton"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="●"
            android:textColor="#7094BC" />

    </LinearLayout><!--날짜 계산 끝-->


    <!--메뉴 아이콘-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="#80000000"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:padding="5dp">


        <!--날씨-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_Weather"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/weather"
                android:padding="10dp" />

            <TextView
                android:id="@+id/Weather_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="날씨"
                android:textColor="#ffffff" />
        </LinearLayout><!--날씨-->


        <!--캘린더-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_Calendar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/calendar"
                    android:gravity="center"
                    android:padding="10dp"
                    android:stateListAnimator="@null" /> <!--버튼이 최상위 일때-->

                <TextView
                    android:id="@+id/Weektxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:clickable="false"
                    android:text="요일"
                    android:textColor="#ffffff"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/Daytxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="10dp"
                    android:clickable="false"
                    android:text="일"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />

            </FrameLayout>

            <TextView
                android:id="@+id/calendar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="캘린더"
                android:textColor="#ffffff" />
        </LinearLayout><!--캘린더-->

        <!--지도-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_GPS"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/gps"
                android:padding="10dp" />

            <TextView
                android:id="@+id/gps_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="산책 지도"
                android:textColor="#ffffff" />
        </LinearLayout><!--지도-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_rank"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/rank"
                android:padding="10dp" />

            <TextView
                android:id="@+id/rank_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="랭킹"
                android:textColor="#ffffff" />
        </LinearLayout><!--랭킹-->

        <!--게시판-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_Chat"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/chat"
                android:padding="10dp" />

            <TextView
                android:id="@+id/chat_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="게시판"
                android:textColor="#ffffff" />
        </LinearLayout><!--게시판-->


    </LinearLayout>


</LinearLayout>